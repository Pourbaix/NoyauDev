# -*- coding: utf-8 -*-


<EmptyTeams@Label>
    text: "You don't have any teams"

<TeamsListButton@Button>
    size_hint_y: None
    height: 55
    font_size: 15
    background_color: (0, 0, 0, 0)

    canvas.before:
        Color:
            rgba: (1,1,1,0.25)
        Line:
            width: .5
            rectangle: self.x, self.y, self.width, 0

<TeamsContainer@ScrollView>
    do_scroll_x: False
    do_scroll_y: True

    GridLayout:
        id: channels_content
        cols: 1
        spacing: 2
        size_hint_y: None